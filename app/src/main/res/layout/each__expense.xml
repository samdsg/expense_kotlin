<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/each__expense"
        android:paddingBottom="11dp"
        android:paddingTop="11dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/group_24"
            android:id="@+id/e_expense_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

    <TextView
            android:text="Coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/e_expense_text"
            app:layout_constraintBottom_toBottomOf="@+id/e_expense_img"
            app:layout_constraintStart_toEndOf="@+id/e_expense_img"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/e_expense_img" />

    <TextView
            android:text="- 4.50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/e_expense__price"
            app:layout_constraintBottom_toBottomOf="@+id/e_expense_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/e_expense_text"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>